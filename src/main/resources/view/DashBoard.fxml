<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="40.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.therapycenter.controller.DashBoardController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Rectangle width="40.0" height="4.0" arcWidth="4.0" arcHeight="4.0" fill="#3498db" />
            <Label text="MENTAL HEALTH THERAPY CENTER" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </Label>
            <Rectangle width="40.0" height="4.0" arcWidth="4.0" arcHeight="4.0" fill="#3498db" />
         </children>
      </HBox>

      <Label text="Dashboard Overview" textFill="#7f8c8d">
         <font>
            <Font size="16.0" />
         </font>
      </Label>

      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <StackPane>
               <children>
                  <Rectangle width="160.0" height="160.0" arcWidth="20.0" arcHeight="20.0" fill="white">
                     <effect>
                        <DropShadow height="15.0" radius="7.0" width="15.0">
                           <color>
                              <Color opacity="0.1" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Rectangle>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Rectangle width="50.0" height="3.0" fill="#3498db" opacity="0.5" />
                        <Label fx:id="therapistsCount" text="0" textFill="#3498db">
                           <font>
                              <Font name="System Bold" size="40.0" />
                           </font>
                        </Label>
                        <Label text="Therapists" textFill="#7f8c8d">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </StackPane>

            <StackPane>
               <children>
                  <Rectangle width="160.0" height="160.0" arcWidth="20.0" arcHeight="20.0" fill="white">
                     <effect>
                        <DropShadow height="15.0" radius="7.0" width="15.0">
                           <color>
                              <Color opacity="0.1" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Rectangle>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Rectangle width="50.0" height="3.0" fill="#3498db" opacity="0.5" />
                        <Label fx:id="patientsCount" text="0" textFill="#3498db">
                           <font>
                              <Font name="System Bold" size="40.0" />
                           </font>
                        </Label>
                        <Label text="Patients" textFill="#7f8c8d">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </StackPane>

            <StackPane>
               <children>
                  <Rectangle width="160.0" height="160.0" arcWidth="20.0" arcHeight="20.0" fill="white">
                     <effect>
                        <DropShadow height="15.0" radius="7.0" width="15.0">
                           <color>
                              <Color opacity="0.1" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Rectangle>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Rectangle width="50.0" height="3.0" fill="#3498db" opacity="0.5" />
                        <Label fx:id="programsCount" text="0" textFill="#3498db">
                           <font>
                              <Font name="System Bold" size="40.0" />
                           </font>
                        </Label>
                        <Label text="Programs" textFill="#7f8c8d">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </StackPane>

            <StackPane>
               <children>
                  <Rectangle width="160.0" height="160.0" arcWidth="20.0" arcHeight="20.0" fill="white">
                     <effect>
                        <DropShadow height="15.0" radius="7.0" width="15.0">
                           <color>
                              <Color opacity="0.1" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Rectangle>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Rectangle width="50.0" height="3.0" fill="#3498db" opacity="0.5" />
                        <Label fx:id="sessionsCount" text="0" textFill="#3498db">
                           <font>
                              <Font name="System Bold" size="40.0" />
                           </font>
                        </Label>
                        <Label text="Sessions Today" textFill="#7f8c8d">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </HBox>
   </children>
</VBox>